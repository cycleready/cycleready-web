<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><span class="glyphicon glyphicon-tree-deciduous" aria-hidden="true"></span> <%= @neighborhood.name %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <%= @neighborhood.about || @neighborhood.name + ' is an awesome San Francisco neighborhood!' %></div>
        </div>
        <hr>

        <div class="row">
          <div class="col-md-12">
            <h5>Bike Routes in this Neighborhood:</h5>
            <div class="list-group">
              <% @neighborhood.bikeroutes.each do |bikeroute| %>
                <%= link_to bikeroute_path(bikeroute), :class=>'list-group-item' do %>
                  <h4 class="list-group-item-heading"><span class="glyphicon glyphicon-road" aria-hidden="true"></span> <%= bikeroute.name %></h4>
                  <p class="list-group-item-text">
                    <%= bikeroute.description[0..24] + '...' %>
                  </p>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>

      </div>
      <div class="panel-footer">
        <%= link_to 'Back', neighborhoods_path, :class=>"btn btn-default" %>
      </div>

    </div>
  </div>
  <div class="col-md-2"></div>
</div>
